{
  "name": "speljs",
  "version": "1.0.0",
  "scripts": {
    "build:js": "browserify -t babelify src/scripts/index.js | uglifyjs > build/index.js",
    "watch:js": "watchify -d -t babelify -o build/index.js src/scripts/index.js",
    "build:css": "NODE_ENV=production postcss src/css/index.css --no-map -c postcss.config.js -o build/index.css",
    "watch:css": "postcss src/css/index.css -w -c postcss.config.js -o build/index.css",
    "build": "npm run build:js && npm run build:css",
    "watch": "npm run watch:js & npm run watch:css",
    "start": "http-serve build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spelJS/spelJS"
  },
  "private": "true",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "http-serve": "^1.0.1",
    "normalize.css": "^6.0.0",
    "postcss-cli": "^3.1.1",
    "postcss-csso": "^2.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "postcss-url": "^6.0.4",
    "uglify-js": "^2.8.22",
    "watchify": "^3.9.0"
  }
}
